#!/usr/bin/env bash

# Restart syncoid-to-maia service and follow logs
# Usage: sudo ./ncrmro-laptop-restart-syncoid

if [ "$EUID" -ne 0 ]; then
  echo "Please run as root"
  exit 1
fi

echo "Restarting syncoid-to-maia service..."
systemctl restart syncoid-to-maia.service

echo "Following logs (press Ctrl+C to exit)..."
journalctl -fu syncoid-to-maia.service

